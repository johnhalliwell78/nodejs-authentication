doctype html
html
  head
    title #{title}: Express Website
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='generator', content='Jekyll v3.8.5')
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
      a.navbar-brand(href='#') Express
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item(class=(title === 'Members' ? 'active' : ''))
            a.nav-link(href='/')
              | Members
              span.sr-only (current)
          if !user
              li.nav-item(class=(title === 'Login' ? 'active' : ''))
                a.nav-link(href='/users/login') Login
              li.nav-item(class=(title === 'Register' ? 'active' : ''))
                a.nav-link(href='/users/register') Register
          if user
              li.nav-item(class=(title === 'Logout' ? 'active' : ''))
                a.nav-link(href='/users/logout') Logout
          li.nav-item.dropdown
            a#dropdown01.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Dropdown
            .dropdown-menu(aria-labelledby='dropdown01')
              a.dropdown-item(href='#') Action
              a.dropdown-item(href='#') Another action
              a.dropdown-item(href='#') Something else here
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
          button.btn.btn-secondary.my-2.my-sm-0(type='submit') Search
     .container
        != messages()
        block content
    footer
      p &copy; 2015, All Rights Reserved
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='/javascripts/bootstrap.js')

