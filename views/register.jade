extends layout

block content
    h1 Register
    p Please register using your information below
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method='post', action='/users/register', enctype='multipart/form-data')
        .form-group
            label Name
            input.form-control(name='name', type='text', value='#{name}', placeholder='Enter Your Name')
        .form-group
            label Email
            input.form-control(name='email', type='email', value='#{email}', placeholder='Enter Your Email')
        .form-group
            label Username
            input.form-control(name='username', type='text', value='#{username}', placeholder='Enter Your Username')
        .form-group
            label Password
            input.form-control(name='password', type='password', placeholder='Enter Your Password')
        .form-group
            label Confirm Your Password
            input.form-control(name='confirmpassword', type='password', placeholder='Confirm Your Password')
        .form-group
            label Profile Image
            input.form-control(name='profileimage', type='file')
        input.btn.btn-primary(name='submit', type='submit', value='Register')